<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p>
  <% if @beer_club.users.empty? %>
      has no memberships
  <% else %>
    <h2>members</h2>

    <ul>
      <% @beer_club.users.each do |user| %>
          <li> <%= user.username %></li>
      <% end %>
    </ul>
<% end %>
</p>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) %> |
